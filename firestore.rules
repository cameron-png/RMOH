rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      // Allow public read for visitor pages
      allow get: if true;
      // Users can only read and write their own profile
      allow list, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Settings Collection
    match /settings/appDefaults {
      // Allow logged-in users to read app default settings
      allow get: if isAuthenticated();
      // Only admins should write to app settings
      allow write: if isAuthenticated() && request.auth.token.isAdmin == true;
    }

    // OpenHouses Collection
    match /openHouses/{houseId} {
      // Allow public read for visitor page
      allow get: if true;
      // Only the owner can read their list of houses and write to them
      allow list, write: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    // FeedbackForms Collection
    match /feedbackForms/{formId} {
      // Allow any authenticated user to read global forms
      allow get: if isAuthenticated() && resource.data.type == 'global';
      // Custom forms can only be read/written by their owner
      allow get, list, write: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // Leads & FeedbackSubmissions
    match /{path=**}/leads/{leadId} {
      // Only the owner of the record can read/write
      allow read, write: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    match /{path=**}/feedbackSubmissions/{submissionId} {
      // Allow anyone to create feedback
      allow create: if true;
      // Only owner can read
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      // No updates or deletes allowed
      allow update, delete: if false;
    }
    
    // Gifts Collection
     match /gifts/{giftId} {
        // Users can only read/write their own gifts
        allow read, write: if isAuthenticated() && isOwner(request.resource.data.userId);
     }
  }
}
