
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read their own profile, admins can read any profile
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      // Public visitors can read a realtor's profile for the visitor page
      allow get: if request.auth == null;
    }

    // Settings can be read by any authenticated user, but only written by admins
    match /settings/appDefaults {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Open Houses can be managed by their owner, or by an admin.
    // Public visitors can read the active open house for a specific user.
    match /openHouses/{houseId} {
      allow read, write, delete: if isOwner(resource.data.userId) || isAdmin();
      // Allow unauthenticated read only for active open houses
      allow get: if request.auth == null && resource.data.isActive == true;
    }
    
    // Feedback Forms
    match /feedbackForms/{formId} {
        // Admins can manage all forms
        allow read, write, delete: if isAdmin();
        // Users can read global forms
        allow read: if resource.data.type == 'global';
        // Users can manage their own custom forms
        allow read, write, delete: if resource.data.type == 'custom' && isOwner(resource.data.userId);
        // Public visitors can get the specific form for an open house
        allow get: if request.auth == null;
    }

    // Leads can be created by anyone (public visitors)
    // They can be read/managed by the owner or an admin.
    match /leads/{leadId} {
        allow create: if true; // Public and authenticated can create
        allow read, update, delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Feedback submissions can be created by anyone (public visitors)
    // They can be read by the owner or an admin.
    match /feedbackSubmissions/{submissionId} {
        allow create: if true; // Public and authenticated can create
        allow read: if isOwner(resource.data.userId) || isAdmin();
        // Nobody can update or delete submissions to preserve data integrity
        allow update, delete: if false;
    }

    // Gifts can be managed by their owner or an admin
    match /gifts/{giftId} {
        allow read, write, delete: if isOwner(resource.data.userId) || isAdmin();
        // Public can create pending gifts via feedback form
        allow create: if request.auth == null;
    }
  }
}
