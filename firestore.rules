
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/update their own profile, admins can read any.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Settings can only be read by authenticated users and modified by admins.
    match /settings/appDefaults {
      allow get: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Feedback forms can be read by anyone authenticated, written only by custom owners or admins.
    match /feedbackForms/{formId} {
        allow read: if request.auth != null;
        allow create, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.token.isAdmin == true);
    }
    
    // Users can read and write to their own open houses. Admins can read all.
    match /openHouses/{houseId} {
      allow read, create, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || (request.resource.data.userId == request.auth.uid));
      allow read: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
    // Users can read and write to their own leads. Admins can read all.
    match /leads/{leadId} {
       allow read, create, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || (request.resource.data.userId == request.auth.uid));
       allow read: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Users can read and write to their own feedback submissions. Admins can read all.
    match /feedbackSubmissions/{submissionId} {
       allow read, create, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || (request.resource.data.userId == request.auth.uid));
       allow read: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
     // Users can read and write to their own gifts. Admins can read all.
    match /gifts/{giftId} {
       allow read, create, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || (request.resource.data.userId == request.auth.uid));
       allow read: if request.auth != null && request.auth.token.isAdmin == true;
    }

  }
}
