rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users can read their own profile, admins can read any profile.
    // Users can create their own profile upon signup.
    // Users can update their own profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }
    
    // Admins can read all transactions. Users can read their own.
    // Only backend processes can create transactions.
    match /transactions/{transactionId} {
      allow read: if isAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id == resource.data.userId;
      allow create, update, delete: if false; // Server-side only
    }

    // Users can manage their own open houses. Admins can read all.
    match /openHouses/{houseId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow create, update, delete: if request.auth.uid == resource.data.userId;
    }
    
    // Users can manage their own leads. Admins can read all.
    match /leads/{leadId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId || isAdmin();
      // Anyone can create a lead (from the public visitor page)
      allow create: if true;
    }

    // Custom forms are managed by their owner. Global forms can be read by anyone.
    // Admins can read all forms.
    match /feedbackForms/{formId} {
       allow read: if resource.data.type == 'global' || request.auth.uid == resource.data.userId || isAdmin();
       allow create, update, delete: if request.auth.uid == resource.data.userId;
    }
    
    // Users can manage feedback for their properties. Admins can read all.
    // Anyone can create feedback (from the public visitor page)
    match /feedbackSubmissions/{submissionId} {
        allow read: if request.auth.uid == resource.data.userId || isAdmin();
        allow create: if true;
    }
    
    // App settings can be read by any authenticated user, but only managed by admins.
    match /settings/{docId} {
        allow read: if request.auth != null || isAdmin();
        allow write: if isAdmin();
    }
    
    // Users can manage their own gifts. Admins can read all gifts.
    // Backend processes create gifts.
    match /gifts/{giftId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow create, update, delete: if request.auth.uid == resource.data.userId || isAdmin();
    }
  }
}
