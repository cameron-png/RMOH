
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow admins to read/write all user documents
    match /users/{userId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Open Houses: Users can manage their own, admins can manage any.
    match /openHouses/{houseId} {
      allow read, create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId
                          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Leads: Users can manage their own, admins can read any.
    match /leads/{leadId} {
        allow read, create, update: if request.auth.uid == resource.data.userId
                                || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
        allow read, update, delete: if request.auth.uid == resource.data.userId
                                || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Feedback Forms:
    // Anyone can read global forms
    // Users can create/manage their own custom forms
    // Admins can manage any form
    match /feedbackForms/{formId} {
        allow read: if resource.data.type == 'global';
        allow read, create, update, delete: if (resource.data.type == 'custom' && request.auth.uid == resource.data.userId)
                                            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
        allow create: if request.resource.data.type == 'custom' && request.auth.uid == request.resource.data.userId;
    }

    // Feedback Submissions:
    // Users can create them for any open house (linked via QR code)
    // Users can read submissions linked to their own open houses
    // Admins can read any submission
    match /feedbackSubmissions/{submissionId} {
        allow create: if request.auth == null; // Allow anonymous creation from the public visitor page
        allow read: if get(/databases/$(database)/documents/openHouses/$(resource.data.openHouseId)).data.userId == request.auth.uid
                    || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Settings: only admins can read or write app settings.
    match /settings/{settingId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
